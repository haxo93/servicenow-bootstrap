[client]
port            = 3306
socket          = /glide/mysql/mysql.sock

[mysqld]
port            = 3306
socket          = /glide/mysql/mysql.sock
basedir         = /glide/mysql
datadir         = /glide/mysql/data
tmpdir          = /glide/mysql/tmp
user            = mysql

# Memory settings
innodb_buffer_pool_size = 16G
innodb_log_buffer_size = 64M
key_buffer_size = 32M
tmp_table_size = 64M
max_heap_table_size = 64M

# InnoDB settings
innodb_file_per_table = 1
innodb_flush_method = O_DIRECT
innodb_flush_log_at_trx_commit = 2
innodb_log_file_size = 512M
innodb_log_files_in_group = 2

# Connection settings
max_connections = 1000
max_allowed_packet = 256M
wait_timeout = 28800
interactive_timeout = 28800

# Query cache
query_cache_type = 0
query_cache_size = 0

# Character set
character-set-server = utf8mb4
collation-server = utf8mb4_general_ci

# Binary logging
log_bin = mysql-bin
expire_logs_days = 7
max_binlog_size = 100M
sync_binlog = 0

# Error logging
log_error = /glide/mysql/logs/error.log

# Slow query logging
slow_query_log = 1
slow_query_log_file = /glide/mysql/logs/slow.log
long_query_time = 2

[mysqldump]
quick
quote-names
max_allowed_packet = 256M